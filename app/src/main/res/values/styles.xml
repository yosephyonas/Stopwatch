<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Ritluck" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Ritluck.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Style for buttons -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <!-- Customize button style here -->
    </style>

    <!-- Style for text appearance -->
    <style name="TextAppearance">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
        <!-- Add more text appearance customizations here -->
    </style>

    <!-- TimePicker Theme -->
    <style name="TimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:numbersTextColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
    </style>

    <!-- Timer Button Style -->
    <style name="TimerButtonStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">@color/button_background_color</item>
    </style>

    <!-- NumberPicker Style -->
    <style name="NumberPickerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:divider">@drawable/numberpicker_divider</item>
    </style>
</resources>
